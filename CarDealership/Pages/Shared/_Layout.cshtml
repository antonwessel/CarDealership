<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"] - CarDealership</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true">
    <link rel="stylesheet" href="~/CarDealership.styles.css" asp-append-version="true">
</head>
<body class="d-flex flex-column min-vh-100">
    <!-- Ensures Footer Stays at Bottom -->
    <!-- Navbar -->
    <nav class="navbar navbar-expand-sm navbar-light bg-white border-bottom shadow-sm">
        <div class="container">
            <a class="navbar-brand" asp-area="" asp-page="/Index">CarDealership</a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav"
                    aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item"><a class="nav-link text-dark" asp-page="/Index">Hjem</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-page="/Privacy">Privacy</a></li>
                    <li class="nav-item"><a class="nav-link text-dark" asp-page="/LoginWebsite">Login</a></li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content (Pushes Footer Down) -->
    <div class="container flex-grow-1">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <!-- Hero Section -->
    <header class="text-center bg-light py-5">
        <div class="container">
            <h1 class="display-4">Find Din Drømme</h1>
            <p class="lead">Her er forskellige kollektioner af vores fantastiske biler.</p>
            <a href="#cars" class="btn btn-primary btn-lg">Se biler</a>
        </div>
    </header>

    <!-- Featured Cars Section -->
    <section id="cars" class="py-5">
        <div class="container text-center">
            <h2 class="mb-4">Biler</h2>
            <div class="row">
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <img src="https://www.motortrend.com/uploads/2024/01/1-2024-Tesla-Model-S-front-view.jpg" class="card-img-top" alt="2024 Tesla Model S">
                        <div class="card-body">
                            <h3 class="card-title">2024 Tesla Model S</h3>
                            <p class="card-text">899,900kr</p>
                            <a href="#" class="btn btn-outline-primary">View Details</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <img src="https://bmw.scene7.com/is/image/BMW/g82_cs_ext_m-design-engine-bonnet_fb?qlt=80&wid=1024&fmt=webp" class="card-img-top" alt="2023 BMW M4">
                        <div class="card-body">
                            <h3 class="card-title">2023 BMW M4</h3>
                            <p class="card-text">755,000kr</p>
                            <a href="#" class="btn btn-outline-primary">View Details</a>
                        </div>
                    </div>
                </div>
                <div class="col-md-4">
                    <div class="card shadow-sm">
                        <img src="https://www.motortrend.com/uploads/2022/05/2023-Mercedes-AMG-GT-Track-Series-45.jpg" class="card-img-top" alt="2023 Mercedes AMG GT">
                        <div class="card-body">
                            <h3 class="card-title">2023 Mercedes AMG GT</h3>
                            <p class="card-text">1,300,000kr</p>
                            <a href="#" class="btn btn-outline-primary">View Details</a>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Contact Section -->
    <section id="contact" class="text-center py-5 bg-light">
        <div class="container">
            <h2>Hjælp</h2>
            <p>Har du spørgsmål?</p>
            <a href="mailto:sales@dreamcars.com" class="btn btn-primary">Kontakt os her</a>
        </div>
    </section>

    <!-- Footer (Stays at Bottom) -->
    <footer class="text-center py-3 bg-dark text-white mt-auto">
        <p class="mb-0">© 2025 CarDealership</p>
    </footer>

    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
