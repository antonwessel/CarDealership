<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CarDealership</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/CarDealership.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container">
                <a class="navbar-brand" asp-area="" asp-page="/Index">CarDealership</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Index">Hjem</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/Privacy">Privacy</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link text-dark" asp-area="" asp-page="/LoginWebsite">Login</a>
                        </li>
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <body>

        <!-- Navigation Bar -->
        <nav>
            <div class="logo">CarDealership</div>
            <ul class="nav-links">
                <li><a href="#cars">Cars</a></li>
                <li><a href="#contact">Contact</a></li>
            </ul>
        </nav>

        <!-- Hero Section -->
        <header>
            <h1>Find Din Drømme</h1>
            <p>Her er forskellige kollektioner af vores fantatiske biler.</p>
            <a href="#cars" class="cta-button">Se biler</a>
        </header>

        <!-- Featured Cars -->
        <section id="cars">
            <h2>Biler</h2>
            <div class="car-container">
                <div class="car">
                    <img src="car1.jpg" alt="Car 1">
                    <h3>2024 Tesla Model S</h3>
                    <p>899,900kr</p>
                    <a href="#" class="car-button">View Details</a>
                </div>
                <div class="car">
                    <img src="car2.jpg" alt="Car 2">
                    <h3>2023 BMW M4</h3>
                    <p>755,000kr</p>
                    <a href="#" class="car-button">View Details</a>
                </div>
                <div class="car">
                    <img src="car3.jpg" alt="Car 3">
                    <h3>2023 Mercedes AMG GT</h3>
                    <p>1,300000kr</p>
                    <a href="#" class="car-button">View Details</a>
                </div>
            </div>
        </section>

        

        <!-- Contact Section -->
        <section id="contact">
            <h2>Hjælp</h2>
            <p>Har du spørgsmål?</p>
            <a href="mailto:sales@dreamcars.com" class="cta-button">Kontakt os her</a>
        </section>

        <!-- Footer -->
        <footer>
            <p>©2025 CarDealership.</p>
        </footer>

    </body>
</body>
</html>